{
    "logs_root_path": "./Logs/",

    "trader_log_level": "INFO",
    "jarchi_log_level": "INFO",
    "bot_log_level"   : "INFO",
    "TPL_log_level"   : "INFO",
    "NL_log_level"    : "INFO",

    "stdout_log_level": "DEBUG",
    "file_log_level"  : "DEBUG",

    "log_suffix": ".jsonl",

    "file_handlers_calendar_type"  : "Jalali",
    "stream_handlers_calendar_type": "Jalali",

    "date_fmt": "%Y-%m-%d %H:%M:%S GMT%z",
    
    "stdout_fmt": "{levelname}_LOG captured by '{name}'.  '{asctime}': \n\tInside '{funcName}' of '{filename}' at :\n\tMessage:\t{message}\n\n",
    "stderr_fmt": "{levelname}_LOG captured by '{name}'!!!  '{asctime}':\n\tInside '{funcName}' of '{filename}' located in '{pathname}' on line {lineno} in '{funcName}' function with arguments {args}:\n\tProcess:\t'{processName}' - '{process}'\n\tThread:\t\t'{threadName}' - '{thread}'\n\tTask:\t\t'{taskName}'\n\tMessage:\t{message}\n\texc_info:\t{exc_info}\n\tstack_info:\t{stack_info}\n\n",
    
    "json_fields": {
        "level"        : "levelname",
        "time"         : "asctime",
        "time_stamp"   : "created",
        "logger"       : "name",
        "message"      : "message",
        "path"         : "pathname",
        "file"         : "filename",
        "module"       : "module",
        "line"         : "lineno",
        "function"     : "funcName",
        "async_task"   : "taskName",
        "thread_name"  : "threadName",
        "thread_id"    : "thread",
        "process_name" : "processName",
        "process_id"   : "process"},

    "rotating_file_handler_unit": "H",
    "rotating_file_handler_interval": 1,
    "files_backup_count": 24,
    "file_naming_approach": "Jalali_Dated"
}